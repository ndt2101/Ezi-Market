<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="post"
            type="com.tuan2101.ezimarket.dataclasses.Post" />
        <variable
            name="listener"
            type="com.tuan2101.ezimarket.adapter.PostAdapter.OnPostClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/profile_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                loadImage="@{post.user.avatar}"
                tools:src="@drawable/logo" />

            <LinearLayout
                android:id="@+id/name_time_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_weight="10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@{post.user.name}"
                    tools:text="Sieu thị xe đạp 368" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="@{post.user.vital}"
                        tools:text="Nhà bán" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/created"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        tools:text="39 phút trước" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:minWidth="200dp">

                <TextView
                    android:id="@+id/follow_checking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_background"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Theo dõi" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/profile_area">

            <TextView
                android:id="@+id/short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:text="@{post.postContentText}"
                android:maxLines="3"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="visible"
                tools:text="@tools:sample/lorem/random"/>

            <TextView
                android:id="@+id/full_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{post.postContentText}"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="@tools:sample/lorem/random"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/post_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            loadImage="@{post.postContentImage}"
            app:layout_constraintTop_toBottomOf="@id/text_area"
            tools:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/post_img">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                loadImage="@{post.product.imageProduct}"
                tools:src="@drawable/logo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:text="@{post.product.nameProduct}"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Kem nghe thai duong chua bac" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxWidth="100dp"
                    android:maxLines="1"
                    android:text="@{@string/new_price(post.product.newPrice)}"
                    android:textColor="@color/themeColor"
                    android:textSize="18sp"
                    tools:text="d 90000" />
            </LinearLayout>

            <View
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@drawable/arrow_right" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/voucher_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/product">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/voucher_shop_img"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    loadImage="@{post.voucher.voucherShop.avatar}"
                    tools:src="@drawable/logo" />

                <View
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="-25dp"
                    android:layout_marginRight="-25dp"
                    android:background="@drawable/rotate"
                    tools:ignore="RtlSymmetry" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/voucher_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="@{String.valueOf(post.voucher.discount)}"
                        tools:text="Giam 30% " />

                    <TextView
                        android:id="@+id/voucher_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{post.voucher.voucherDescription}"
                        tools:text="Giam 30% cho cac don hang tu 1 trieu" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/button_background"
                            android:text="Lưu"
                            android:textAllCaps="false"
                            android:textColor="@color/black" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/added"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:background="@color/white"
                            android:text="Đã lưu"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/exp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            dateFormat="@{post.voucher.exp}"
                            tools:text="Hạn sử dụng: 30/12/2021" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/voucher_area">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/like_bt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/like"
                    android:padding="3dp"/>

                <TextView
                    android:id="@+id/num_of_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/like_bt"
                    android:textColor="@color/black"
                    android:text="@{String.valueOf(post.likeList.size)}"
                    tools:text="300" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="@{() -> listener.onClickComment(post)}">

                <ImageView
                    android:id="@+id/cmt_bt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:padding="3dp"
                    android:src="@drawable/cmt_ic" />

                <TextView
                    android:id="@+id/num_of_cmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/cmt_bt"
                    android:text="@{String.valueOf(post.commentList.size)}"
                    android:textColor="@color/black"
                    tools:text="300" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
